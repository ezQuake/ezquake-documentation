<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../xsl/command.xsl"?>
<command xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/command.xsd">
  <name>hud262_position</name>
  <description>indicates position of a hud element on the screen; </description>
  <syntax>hud262_position hud_name pos x y</syntax>
  <arguments>
    <argument>
      <name>hud_name</name>
      <description>name of your hud element</description>
    </argument>
    <argument>
      <name>pos</name>
      <description>Posotion: 
1 upper left corner 
2 upper rightcorner 
3 lower right corner 
4 lower left corner 
5 upper central position 
6 lower central position.</description>
    </argument>
    <argument>
      <name>x</name>
      <description>horisontal offset</description>
    </argument>
    <argument>
      <name>y</name>
      <description>vertical offset</description>
    </argument>
  </arguments>
</command>
