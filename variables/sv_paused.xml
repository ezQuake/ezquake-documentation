<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../xsl/variable.xsl"?>
<variable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/variable.xsd">
  <name>sv_paused</name>
  <description>read-only variable that gives you current pause state (condition).</description>
  <value>
    <enum>
    <value>
      <name>0</name>
      <description>pause is off</description>
    </value>
    <value>
      <name>1</name>
      <description>normal pause that can be set by 'pause' command</description>
    </value>
    <value>
      <name>2</name>
      <description>auto pause (single player only) when going into menus</description>
    </value>
    <value>
      <name>3</name>
      <description>both (normal pause + auto pause)</description>
    </value>
    </enum>
  </value>
</variable>
