<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../xsl/variable.xsl"?>
<variable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/variable.xsd">
  <name>scr_sbar_drawsigils</name>
  <description>Turns drawing of sigils on/off.</description>
  <value>
    <boolean>
      <true>Draw sigils.</true>
      <false>Do not draw sigils.</false>
    </boolean>
  </value>
  <remarks>This variable applies for old HUD &lt;= 'scr_newhud 0'.</remarks>
</variable>
