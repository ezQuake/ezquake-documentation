<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../xsl/variable.xsl"?>
<variable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/variable.xsd">
  <name>hud_frags_padtext</name>
  <description>Toggles text padding in 'frags' HUD element.</description>
  <value>
    <boolean>
      <true>Adds padding so frags, names, team tags aligned into columns.</true>
      <false>No spaces between text fields.</false>
    </boolean>
  </value>
  <remarks>Use 'frags shownames 1' and/or 'frags showteams 1'.</remarks>
</variable>
