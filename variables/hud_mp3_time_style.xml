<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../xsl/variable.xsl"?>
<variable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/variable.xsd">
  <name>hud_mp3_time_style</name>
  <description>Changes displayed informations for 'mp3_time' HUD element.</description>
  <value>
    <enum>
    <value>
      <name>0</name>
      <description>Played time / total time of track, golden brackets around.</description>
    </value>
    <value>
      <name>1</name>
      <description>Remaining time / total time of track, golden brackets around.</description>
    </value>
    <value>
      <name>2</name>
      <description>Remaining time only, golden brackets around.</description>
    </value>
    <value>
      <name>3</name>
      <description>Played time only, golden brackets around.</description>
    </value>
    <value>
      <name>4</name>
      <description>Same as 0, without golden brackets.</description>
    </value>
    <value>
      <name>5</name>
      <description>Same as 1, without golden brackets.</description>
    </value>
    <value>
      <name>6</name>
      <description>Same as 2, without golden brackets.</description>
    </value>
    <value>
      <name>7</name>
      <description>Same as 3, without golden brackets.</description>
    </value>
    </enum>
  </value>
  <remarks>Note that display of seconds is disabled in ruleset smackdown.</remarks>
</variable>
